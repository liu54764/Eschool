/* pages/login/index.wxss */page {
  background: rgba(250, 250, 250, 1);
}

.login {
  padding: 64rpx;
  margin-top: 10rpx;
}

.form-item image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 32rpx;
}

.login .cu-btn {
  font-weight: bold;
  width: 100%;
  height: 98rpx;
  border-radius: 30rpx;
  background: linear-gradient(90deg,
      rgba(169, 231, 240, 0.9) 0%,
      #65abe4 1%,
      #2196f3 100%);
  box-shadow: 0rpx 0rpx 12rpx 0rpx rgba(0, 0, 0, 0.1);
  color: #fff;
  margin-top: 50rpx;
}

.header {
  display: flex;
  justify-content: center;
  margin-top: 100px;
}

.header image {
  width: 488rpx;
  height: 376rpx;
}

.form-item {
  font-weight: 400;
  height: 98rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(232, 232, 232, 0.86);
  box-shadow: 0rpx 0rpx 2rpx -4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 38rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
}
.checkbox-group {
  display: flex;

  align-items: center;
}

.checkbox {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}