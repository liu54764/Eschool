.container {
  padding: 20px;
}
.title {
  float: left;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 120px;
  font-size: 24px;
  font-weight: bold;
}

.history-button {
  float: left;
  margin-left: 20px;
  background-color: #1ab8c4;
  color: #fff;
  padding: 2px 12px;
  border-radius: 4px;
}

.divider {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin: 10px 0;
}

.form-group {
  font-size: 20px;
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  width: 100%;
}

.label {
  color: rgb(107, 10, 10);
  flex: 0 0 100px;
  margin-left: 20px;
  font-family: serif;
  font-weight: bolder;
}

.input {
 text-align: center;
  height: 40px;
  flex: 1;
  /* padding: 10px; */
  border: 1px solid #ccc;
  border-radius: 4px;
}

.picker {
  text-align: center;
  height: 40px;
  /* display: flex;
  align-items: center; */
  justify-content: space-between;
  /* font-size: px; */
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 4px;
  width: 215px;
}
.textarea {
  font-size: 20px;
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  min-height: 50px;
}


.submit-button {
  width: 100%;
  background-color: #1ab8c4;
  color: #fff;
  padding: 5px;
  border-radius: 4px;
  text-align: center;
  margin-top: 20px;
  font-size: 20px;
  font-weight: bold;
}

.modal {
  z-index: 2;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  width: 90%;
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
}

.modal-title {
  font-size:24px;
  font-weight: bold;
  margin-bottom: 10px;
  text-align: center;
}

.modal-options {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.modal-option {
  font-size: 16px;
  padding: 10px;
  margin: 5px;
  background-color: #1ab8c4;
  color: #fff;
  border-radius: 4px;
  text-align: center;
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}

.modal-button {
  background-color: #1ab8c4;
  color: #fff;
  font-weight: bold;
}

.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 20px;
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
  font-size: 16px;
  border-radius: 4px;
  z-index: 9999;
}
.modal-content {
  padding: 20px;
}

.modal-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.record-list {
  margin-top: 10px;
}

.record {
  font-size: 18px;
  margin-bottom: 10px;
}

.record-separator {
  height: 1px;
  background-color: #e5e5e5;
  margin-top: 10px;
  margin-bottom: 10px;
}