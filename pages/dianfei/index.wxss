.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20px;
  /* height: 100vh; */
  box-sizing: border-box;
}

.header {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 20px;
  width: 100%;
  text-align: center;
}

.divider {
  height: 1px;
  background-color: #ccc;
  width: 100%;
  margin-bottom: 10px;
}

.current-time {
  font-weight: bold;
  font-size: 18px;
  margin-bottom: 10px;
  width: 100%;
  text-align: center;
}

.current-balance {
  margin-top: 10px;
  font-size: 16px;
  margin-bottom: 20px;
  width: 100%;
  text-align: center;
}

.dorm-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
  width: 100%;
}
.recharge-button {
  font-size: 20px;
  padding: 10px 0;
  background-color: #4a90e2;
  color: #fff;
  border-radius: 0;
  text-align: center;
  width: 100%;
  font-weight: bold;
}
.query-button {
  font-size: 18px;
  padding: 2px 10px;
  background-color: #4a90e2;
  color: #fff;
  border-radius: 4px;
}

.dropdown-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 0px;
  width: 100%;
}

.dropdown {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  flex: 1 0 45%; /* 45% 是示例值，根据实际需要调整 */
  margin-bottom: 20px;
}

.payment-section {
  margin-bottom: 20px;
  width: 100%;
}

.label {
  font-size: 20px;
  margin-bottom: 5px;
  font-weight: bold;
  font-family: serif;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 16px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.arrow {
  width: 12px;
  height: 12px;
  transform: rotate(90deg);
}

