.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10px;
}

.title {
  font-size: 24px;
  margin-bottom: 30px;
  color: rgb(16, 106, 141);
}

.card {
  border-radius: 20px;
  margin-top: 180px;
  width: 330px;
  border: 1px solid #ccc; /* 边框颜色和宽度 */
  background-color: #f5f5f5; /* 背景颜色 */
  padding: 10px; /* 内边距 */
}

.button-area {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.function-button {
  font-weight: 500;
  width: 85px; /* 调整按钮宽度 */
  height: 85px;
  margin: 7px; /* 调整按钮间距 */
  background-color: #1ab8c4;
  color: #fff;
  font-size: 17px;
  border-radius: 15px;
  line-height: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.function-button text {
  margin-top: 10px;
}
