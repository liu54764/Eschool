/* home.wxss */

.container {
  flex-direction: column;
  align-items: center;
  height: 100vh;
}

.title {
  font-size: 24px;
  margin-bottom: 30px;
}

.button-area {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 30px;
}

.function-button {
  width: 160px;
  height: 160px;
  margin: 10px;
  background-color: #2196f3;
  color: #fff;
  font-size: 16px;
  border-radius: 10px;
  line-height: 160px;
  text-align: center;
}

.content {
  margin-top: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 80px;
  height: 80px;
}

.description {
  font-size: 18px;
  margin-top: 20px;
}

.divider {
  width: 200px;
  height: 1px;
  background-color: #ccc;
  margin: 30px 0;
}

.info {
  font-size: 16px;
  color: #666;
}
