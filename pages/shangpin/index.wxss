/* pages/shangpin/index.wxss */

text{
  display: block;
}
.business-view{
  height: 130rpx;
  background: linear-gradient(to top ,#ffe566 10%,#ffd300 100%);
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.business-img{
  width: 150rpx !important;
  height: 120rpx !important;
  padding-right: 20rpx;
}
.business-img image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.business-time{
  display: flex;
  align-items: center;
  font-size: 27rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.business-time image{
  width: 27rpx;
  height: 27rpx;
  padding-right: 9rpx;
}

.business-take{
  display: flex;
  height: 130rpx;
  padding: 0 10rpx;
}

.business-right{
  width: 100%;
}

.business-title{
  font-size: 37rpx;
  margin-bottom: 19rpx;
  display: flex;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.ordering{
  margin: 20rpx;
  display: flex;
}

.ordering text{
  margin-right: 60rpx;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 33rpx;
  color: #666666;
}
.activetext{
  color: #333333 !important;
  font-weight: bold !important;
  border-bottom: 5rpx solid #ffd161;

}





